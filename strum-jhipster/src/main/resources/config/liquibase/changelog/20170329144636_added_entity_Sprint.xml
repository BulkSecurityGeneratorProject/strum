<?xml version="1.0" encoding="utf-8"?>
<databaseChangeLog
    xmlns="http://www.liquibase.org/xml/ns/dbchangelog"
    xmlns:ext="http://www.liquibase.org/xml/ns/dbchangelog-ext"
    xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
    xsi:schemaLocation="http://www.liquibase.org/xml/ns/dbchangelog http://www.liquibase.org/xml/ns/dbchangelog/dbchangelog-3.4.xsd
                        http://www.liquibase.org/xml/ns/dbchangelog-ext http://www.liquibase.org/xml/ns/dbchangelog/dbchangelog-ext.xsd">

    <property name="now" value="now()" dbms="h2"/>

    <property name="now" value="current_timestamp" dbms="postgresql"/>

    <property name="floatType" value="float4" dbms="postgresql, h2"/>
    <property name="floatType" value="float" dbms="mysql, oracle, mssql"/>

    <!--
        Added the entity Sprint.
    -->
    <changeSet id="20170329144636-1" author="jhipster">
        <createTable tableName="sprint">
            <column name="id" type="bigint" autoIncrement="${autoIncrement}">
                <constraints primaryKey="true" nullable="false"/>
            </column>
            <column name="name" type="varchar(255)">
                <constraints nullable="false" />
            </column>

            <column name="description" type="varchar(255)">
                <constraints nullable="true" />
            </column>

            <column name="start_at" type="timestamp">
                <constraints nullable="true" />
            </column>

            <column name="end_at" type="timestamp">
                <constraints nullable="true" />
            </column>

            <column name="days_planned" type="integer">
                <constraints nullable="true" />
            </column>

            <column name="days_used" type="integer">
                <constraints nullable="true" />
            </column>

            <column name="status" type="varchar(255)">
                <constraints nullable="false" />
            </column>

            <column name="strum_id" type="bigint">
                <constraints nullable="false" />
            </column>

            <column name="created_by_id" type="bigint">
                <constraints nullable="false" />
            </column>

            <!-- jhipster-needle-liquibase-add-column - JHipster will add columns here, do not remove-->
        </createTable>
        <dropDefaultValue tableName="sprint" columnName="start_at" columnDataType="datetime"/>
        <dropDefaultValue tableName="sprint" columnName="end_at" columnDataType="datetime"/>
        
    </changeSet>
</databaseChangeLog>
